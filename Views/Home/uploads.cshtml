@{
    ViewBag.Title = "Uploads";
    Layout = "~/Views/Shared/_Layout_team.cshtml";
}
<head>
    <title></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/component.css" rel="stylesheet" />
    <link href="~/Content/sweetalert.css" rel="stylesheet" />

    <script src="~/Scripts/sweetalert.min.js"></script>
    <script src="~/Scripts/sweetalert-dev.js"></script>

</head>

<h2>Uploads</h2>

@using (Html.BeginForm("uploads", "Home", FormMethod.Post,
                                      new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <div class="component">


        <table class="colorOfRowData">
            <thead>
                <tr>
                    <th>Upload</th>
                    <th>Files</th>

                </tr>
            </thead>
            <tbody>
                


                <tr>
                    <th>Background One</th>

                    <td>
                        <input type="file" name="bg1" id="bg1" style="width: 100%;" />
                        @if (Session["backgroundPath1"] != null)
                        {
                            <img width="100" height="100" src="@Session["backgroundPath1"].ToString()" class="img-thumbnail" style="float:right" />

                        }

                    </td>

                </tr>

                <tr>
                    <th>Background Two</th>

                    <td>
                        <input type="file" name="bg2" id="bg2" style="width: 100%;" />
                        @if (Session["backgroundPath2"] != null)
                        {
                            <img width="100" height="100" src="@Session["backgroundPath2"].ToString()" class="img-thumbnail" style="float:right" />

                        }

                    </td>

                </tr>

                <tr>
                    <th>Background Three</th>

                    <td>
                        <input type="file" name="bg3" id="bg4" style="width: 100%;" />
                        @if (Session["backgroundPath3"] != null)
                        {
                            <img width="100" height="100" src="@Session["backgroundPath3"].ToString()" class="img-thumbnail" style="float:right" />

                        }

                    </td>

                </tr>

                <tr>
                    <th>Action</th>
                    <td><input class="btn btn-primary" type="submit" value="Save" /> | @Html.ActionLink("Go to Home Page", "Index")</td>

                </tr>


            </tbody>

        </table>



    </div>



}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-throttle-debounce/1.1/jquery.ba-throttle-debounce.min.js"></script>

<script src="~/Scripts/jquery.stickyheader.js"></script>

