    <section id="contact">
        <div class="container">
            <div class="row text-center ">
                <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">

                    <br />

                    <p id="isss"></p>

                    <div class="input-group ctrlHolder form-group">
                        <h2>Contact Us</h2>
                    </div>
                    <div class="input-group ctrlHolder form-group">
                        <input class="form_row" id="contactName" name="contactName" placeholder="Name" maxlength="15" size="30" type="text" spellcheck="true" required>

                    </div>
                    <div class="input-group ctrlHolder form-group">
                        <input class="form_row" id="contactSubject" name="contactSubject" placeholder="Subject" maxlength="15" size="30" type="text" spellcheck="true" required>

                    </div>

                    <div class="input-group ctrlHolder form-group">
                        <textarea id="contactBody" name="ContactBody" placeholder="Message" spellcheck="true" rows="10" cols="28" required></textarea>

                    </div>
                    <div class="input-group ctrlHolder form-group">
                        <input type="submit" value="Submit" onclick="sendMessage()" class="btn btn-primary" />

                    </div>


                </div>
            </div>
            <div class="row text-center">


                <div class="col-md-12">

                    <div class="head-set">
                    </div>



                </div>

            </div>
        </div>
    </section>
    <!-- // Login -->
    <div class="modal fade tiny" id="modal-login" tabindex="-1" role="dialog" aria-hidden="true" style="display:none">
        <div class="modal-dialog layout-login">
            <div class="modal-content">
                <div class="modal-body">
                    
                    <a href="#" class="btn btn-block btn-lg btn-success margin-bottom disabled">Welcome to Stunners FC&nbsp;&nbsp;</a>
                    <div class='panel themenav-border boxshadow-darkblue'>
                        <div class='panel-encase'>
                            <h3 class="margin-bottom margin-top text-center uppercase"><i class='fa fa-lock'></i>&nbsp;&nbsp;<b>Login</b></h3>
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { returnUrl = Session["returnUrl"].ToString() }))
                            {
                                
                                @Html.ValidationSummary(true)
                                <div class="form-group ctrlHolder input-group">
                                    <span class="input-group-addon"><b>@@</b></span>
                                    <input class="form-control text" id="username" name="username" placeholder="Username" size="15" type="text" required />
                                </div>
                                <div class="input-group ctrlHolder form-group">
                                    <span class="input-group-addon">&nbsp;<i class="fa fa-lock"></i></span>
                                    <input class="form-control text" id="password" name="password" placeholder="Password" size="15" type="password" required />
                                </div>
                                <h6 style="color:black"></h6>
                                <div>
                                    <h4> <input type="submit" value="Login" class='btn btn-primary margin-bottom-small btn-block btn-lg' data-loading-text="Logging in" /></h4>
                                </div>
                            }
                            @{ Html.EndForm();}
                            <hr class='transparent'>
                            <div class="buttonHolder">
                            </div>
                        </div>
                        <div class='panel-footer'>
                        </div>
                    </div>
                    <a data-dismiss="modal" class='white'>Close &times;</a>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- // modal-login -->
