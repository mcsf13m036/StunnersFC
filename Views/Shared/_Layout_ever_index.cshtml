    <div id="home">
        
        <div class="overlay">
            <!-- overylay class usage -->
            <div class="container">
                <div class="col-md-8 col-md-offset-2 text-center">
                    
                    <h1>Stunners FC</h1>
                    <h2>Football Club</h2>
                    
                    @{
                        if (Session["nextMatch"] != null)
                        {
                            Match_Details m = (Match_Details)Session["nextMatch"];
                            DateTime d = (DateTime)m.match_date;
                            <h3>Next Match:  <b style="color:lightgreen">@d.ToString(new System.Globalization.CultureInfo("en-US"))</b></h3>
    <marquee onmouseover="this.stop();"
             onmouseout="this.start();"><h2 style="color:lightgreen">@m.team_one vs @m.team_two</h2></marquee>

                        }
                        else
                        {
                            <h3>Next Match</h3>
                            <p>No Match available</p>
                        }

                    }
                </div>

            </div>
        </div>
        <br /><br /><br /><br />
    </div>
    <!--HOME SECTION END  -->
    <section id="services">
        <div class="container">
            <div class="row text-center pad-bottom">
                <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
                    <h2 class="head-set">FIXTURES</h2>
                    <p>
                        
                    </p>
                </div>
            </div>
            <div class="row text-center">

                <div class="col-md-4 col-sm-4 col-xs-12">
                    <i class="fa fa-soccer-ball-o  fa-5x"></i>
                    <h4 class="head-set"><b>Match 1</b></h4>
                        @{
                            if(Session["match1"] != null)
                            {
                                Match_Details m = (Match_Details)Session["match1"];
                            <p>@m.team_one vs @m.team_two</p> 
                            
                                <p>@m.team_one_score : @m.team_two_score</p>
                            }
                            else
                            {
                                <p>No Match available</p>
                            }
                            
                        }
                   
                    
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <i class="fa fa-soccer-ball-o  fa-5x"></i>
                    <h4 class="head-set"><b>Match 2</b></h4>
                    @{
                            if (Session["match2"] != null)
                            {
                                Match_Details m = (Match_Details)Session["match2"];
                                <p>@m.team_one vs @m.team_two</p>
                                <p>@m.team_one_score : @m.team_two_score</p>
                            }
                            else
                            {
                                <p>No Match available</p>
                            }

                        }

                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <i class="fa fa-soccer-ball-o  fa-5x"></i>
                <h4 class="head-set"><b>Match 3</b></h4>
                    @{
                        if (Session["match3"] != null)
                        {
                            Match_Details m = (Match_Details)Session["match3"];
                            <p>@m.team_one vs @m.team_two</p>
                        
                                <p>@m.team_one_score : @m.team_two_score</p>
                        }
                        else
                        {
                            <p>No Match available</p>
                        }

                    }
                </div>
            </div>
        </div>
    </section>
